%h1 Editing person
- form_for(@person) do |f|
  = f.error_messages
  = f.hidden_field :grease_doc_id
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :iq
    %br/
    = f.text_field :iq
  %p
    = f.label :birthdate
    %br/
    = f.date_select :birthdate
  %p
    = f.submit "Update"
= link_to 'Show', @person
|
= link_to 'Back', grease_doc_people_path(@person.grease_doc)
